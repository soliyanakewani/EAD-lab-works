<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           classpath:META-INF/spring-beans.xsd">

    <bean id="dbConnectionManager" class="com.example.onlinebookstore.DBConnectionManager">
        <property name="url" value="jdbc:mysql://localhost:3306/BookstoreDB" />
        <property name="username" value="root" />
        <property name="password" value="password" />
    </bean>
    <aop:aspectj-autoproxy />
<bean id="loggingAspect" class="LoggingAspect" />
    
</beans>
